{
	"bracketSpacing": true,
	"endOfLine": "lf",
	"jsxBracketSameLine": true,
	"printWidth": 100,
	"quoteProps": "consistent",
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": false,

	"svelteIndentScriptAndStyle": true,

	"plugins": [
		"prettier-plugin-svelte"
	],

	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
